---
import Layout from '~/layouts/Layout.astro';
import { getHomePermalink } from '~/utils/permalinks';

const title = `404 не нашли`;
---

<Layout metadata={{ title }}>
  <section class="flex items-center h-full p-16">
    <div class="container flex flex-col items-center justify-center px-5 mx-auto my-8">
      <div class="max-w-md text-center">
        <h2 class="mb-8 font-bold text-9xl">
          <span class="sr-only">Не нашли</span>
          <span class="text-primary">404</span>
        </h2>
        <p class="text-3xl font-semibold md:text-3xl">Такой страницы нету, пока</p>
        <p class="mt-4 mb-8 text-lg text-muted dark:text-slate-400">Может, она скоро появится</p>
        <a rel="noopener noreferrer" href={getHomePermalink()} class="btn ml-4">Вернуться</a>
      </div>
    </div>
  </section>
</Layout>
